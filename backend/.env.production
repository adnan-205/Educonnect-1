# Production Environment Variables
# CRITICAL: Replace all placeholder values with actual production secrets

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/educonnect-prod

# JWT Configuration - MUST use strong secrets (32+ characters)
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_MINIMUM_32_CHARACTERS
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_STRONG_SECRET_32_CHARS
JWT_REFRESH_EXPIRE=7d

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET_32_CHARACTERS

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@domain.com
SMTP_PASS=your-app-password

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Production Security
TRUST_PROXY=true
SECURE_COOKIES=true

# Database Connection Pool
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME_MS=30000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5
